        $("#popupSave").click(function () {
            var checkActive = $('#select-records>ul>li');
            var listParam = [];
            $.each(checkActive, function (index, element) {
                var param = {};
                var dataType = $(element).find("input:first").data("type");
                switch (dataType) {
                    case "b-user":
                        param.SystemUserId = $(this).find("input:first").val();
