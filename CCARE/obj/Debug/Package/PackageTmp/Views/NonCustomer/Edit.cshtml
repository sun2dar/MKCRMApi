<script type="text/javascript">
    $(document).ready(function () {
        //validasi kosong untuk mandatory
        function validateForm(action, formName) {
            if ($("#FullName").val() == "") {
                alert("Field Full Name harus diisi");
                // alert("@Resources.Request.RequestMandatoryCustomer");
                return false;
            }

            if ($("#BirthDate").val() != "") {
                $("#BirthDate").val(js_yyyy_mm_dd_hh_mm_ss(stringToDate($("#BirthDate").val(), "dd/mm/yyyy", "/")));
            }
                
            formSubmit(action, formName);
        }

        $("#btn_save").click(function () {
            validateForm("save", $("#form_noncustomer"));
        });

        $("#btn_savenclose").click(function () {
            validateForm("saveNClose", $("#form_noncustomer"));
        });

        $("#confirm-changestatus").on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').click(function () {
                var postData = {
                    _resolution: "",
                    _description: ""
                };

                otherAction($("#form_noncustomer"), "/NonCustomer/ChangeStatus", "changestatus", postData)
            });
        });

        var StateLabel = "@(Model.StateLabel)";
        if (StateLabel == "Inactive") {
            $("input").attr("readonly", "readonly");
            $("select").attr("disabled", "disabled");
        }

        $("#BirthDate").datepicker({
            todayHighlight: true,
            format: "dd/mm/yyyy",
            autoclose: true,
            clearBtn: true,
            orientation: 'top left'
        });
       
        $(".link_other_page").click(function () {
            $(".form_page").hide();
        });
        $(".link_form_page").click(function () {
            $(".form_page").show();
        });

        $("#FirstName").val(UnescapeHtml($("#FirstName").val()));
        $("#LastName").val(UnescapeHtml($("#LastName").val()));
        $("#FullName").val(UnescapeHtml($("#FullName").val()));
    });
</script>

@if (Session["RoleID"] != null)
{
    Guid roleID = new Guid(Session["RoleID"].ToString());
    //bool checkButton = CCARE.App_Function.RoleNPrivilege.checkEntityButtonByRoleID(roleID, "Customer", "CallWrapUp");
    bool checkButton = CCARE.App_Function.RoleNPrivilege.isEntityChecked(roleID, "CallWrapUp");

    if (checkButton == true)
    {
        <script type="text/javascript">
            ////Connect to cti
            try {
                myobject.ConnectIC();
            } catch (e) {

            }

            $(document).ready(function () {
                if (myobject.CallStartDateTime == "") {
                    hideNewCWU();
                } else {
                    showNewCWU();
                }

                $("#btn_create_callwrapup").click(function () {
                    var nonCustomerID = '@Model.NonCustomerID';
                    var ownerID = '@(Session["CurrentUserID"])';
                    var url = '@Url.Action("autoCreateCwu", "CallWrapUp")';

                    openWindow(url + '?customerID=' + nonCustomerID + '&ownerID=' + ownerID + '&startCallTime=' + ctiFormatDate(myobject.CallStartDateTime) + '&flag=noncustomer');
                });
            });

            function hideNewCWU() {
                $("#btn_create_callwrapup").hide();
                $("#btn_create_callwrapup").tooltip('hide');
            }

            function showNewCWU() {
                $("#btn_create_callwrapup").show();
                $("#btn_create_callwrapup").tooltip('show');
            }
        </script>
        
    
        <script type='text/javascript' for="myobject" event="CallConnected()">showNewCWU();</script>
        <script type='text/javascript' for="myobject" event="CallDisconnected()">hideNewCWU();</script>
    }
}
