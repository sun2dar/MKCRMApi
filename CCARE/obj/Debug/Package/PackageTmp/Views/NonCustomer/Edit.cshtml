@model CCARE.Models.MasterData.NonCustomer

@{
    ViewBag.Title = "Edit";
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutEntity.cshtml";
    }
}

@section title
{
    Non Customer: @Model.FullName
}

@section entityLogo
{
    <img class="crm-logo" src="~/assets/images/ico_lrg_112.gif" />
}

@section formTitle
{
    <div class="text_title">
        <h1>Information</h1>
        Non Customer: @Model.FullName
    </div>
}

@section buttonRequest
{
    <a href="#">
        <img id="btn_create_callwrapup" class="btn-create-request"  data-toggle="tooltip" data-placement="left"
           title="" data-original-title="New Call Wrap Up" src="~/assets/images/cwu.png" />
    </a>
}

@section navHeader
{
    <ul class="nav navbar-nav navbar- left">
        @if (Model.StateLabel == "Active")
        {
            <li class="form_page"><a id="btn_save" href="#">Save</a></li>
            <li class="form_page"><a id="btn_savenclose" href="#">Save & Close</a></li>
        }

        <li class="form_page">
            <a id="btn_deactivate" href="#" data-toggle="modal" data-target="#confirm-changestatus">
            @if (Model.StateLabel == "Inactive")
            {
                <text>Activate</text>
            }
            else
            {
                <text>Deactivate</text>
            }
            </a>
        </li>
    </ul>
}

@section footerStatus
{
    <div class="footer_text">Status: @Model.StateLabel</div>
}

@section sidebarMenu
{
    <li><a class="link_form_page" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#page_content" href="/NonCustomer/Edit?id=@(Model.NonCustomerID)">Information</a></li>
    <li><a class="link_other_page" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#page_content" href="/NonCustomer/RequestList?id=@(Model.NonCustomerID)">Request</a></li>
    <li><a class="link_other_page" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#page_content" href="/NonCustomer/CallWrapUpNonCustomer?id=@Model.NonCustomerID">Call Wrap Up</a></li>
}

<div class="modal fade" id="confirm-changestatus" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            @if (Model.StateLabel == "Inactive")
            {
                <h1>Confirm NonCustomer Activate Action</h1>
            }
            else
            {
                <h1>Confirm NonCustomer Deactivate Action</h1>
            }
            </div>
            <div class="modal-body input-lg" style="height:70px;">
            @if (Model.StateLabel == "Inactive")
            {
                <text>This action will change the status of selected NonCustomer to Active. To continue click "Ok"</text>
            }
            else
            {
                <text>This action will change the status of selected NonCustomer to Inactive. To continue click "Ok"</text>
            }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Ok</a>
            </div>
        </div>
    </div>
</div>

