<script type="text/javascript">
    $(document).ready(function () {
        var entityName = '@ViewContext.RouteData.Values["Controller"].ToString()';

        var stateCode = '@(Model.StateCode)';
        if (stateCode == 1) {
            $("#form_branch select").attr('disabled', 'disabled');
            $("#form_branch input").attr('readonly', true);
            $("#form_branch input[type=radio]").attr('disabled', true);
            $("#form_branch textarea").attr('disabled', true);
        }


        function validateForm(action, formName) {
            if ($("#Name").val() == "") {
                alert("@Resources.Branch.MandatoryName");
                return false;
            }
            if ($("#OfficeCode").val() == "") {
                alert("@Resources.Branch.MandatoryOfficeCode");
                return false;
            }
            if ($("#Initials").val() == "") {
                alert("@Resources.Branch.MandatoryInitials");
                return false;
            }
            formSubmit(action, formName);
        }


        $("#btn_save").click(function () {
            validateForm("save", $("#form_branch"));
        });

        $("#btn_savenclose").click(function () {
            validateForm("saveNClose", $("#form_branch"));
        });

        $("#btn_savenopen").click(function () {
            validateForm("saveNOpen", $("#form_branch"));
        });

        $("#confirm-delete").on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').click(function () {
                var postData = {
                    _resolution: "",
                    _description: ""
                };
                otherAction($("#form_branch"), "/Branch/Delete", "delete", postData)
            });
        });

        $("#confirm-changestatus").on('show.bs.modal', function (e) {
