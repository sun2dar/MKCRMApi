@model CCARE.Models.WSID

@{
    ViewBag.Title = "WSID: New";
    Layout = "~/Views/Shared/_LayoutEntity.cshtml";
}

@section title
{
    WSID
}

@section entityLogo
{
    <img class="crm-logo" src="~/assets/images/ico_lrg_112.gif" />
}

@section formTitle
{
    <div class="text_title">
        <h1>Information</h1>
        WSID: New
    </div>
}

@section navHeader
{
    <ul class="nav navbar-nav navbar-left">
        <li><a id="btn_save" href="#">Save</a></li>
        <li><a id="btn_savenclose" href="#">Save & Close</a></li>
        <li><a id="btn_savenopen" href="#">Save & New</a></li>
    </ul>
}

@section footerStatus
{
    <div class="footer_text">Status: New</div>
}

@section sidebarMenu
{
    <li class="active"><a href="#">Information</a></li>
}

<div class="container-fluid">
    <!-- tabs -->
    <div class="row">
        <div class="col-sm-12 panel panel-default panel_form_parent">
            <div class="myContent_noTab">
                @using (Html.BeginForm("Create", "WSID", FormMethod.Post, new { id = "form_wsid" }))
                {
                    @Html.Hidden("hidden_displayStatus", "", new { @id = "hidden_displayStatus" })
                    
                    <!-- panel content -->
                    <div class="col-sm-12">

                        <!-- START title 1 -->
                        <div class="row form_text">
                            <div class="panel panel-default panel_form_child">
                                <div class="panel-heading">
                                    <label class="control-label sv-header"><strong>General</strong></label>
                                </div>
                                <br />
                                <div class="panel-body">
                                    <div class="form-horizontal">
                                
                                        <div class="row">
                                            <div class="col-sm-12">                                        
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label mandatory">WSID</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Location, new { id = "Location", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label mandatory">Lokasi</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Name, new { id = "Name", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label mandatory">Alamat</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Address, new { id = "Address", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Lok</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Lok, new { id = "Lok", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Kota</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.City, new { id = "City", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">DESCKW</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.DescKW, new { id = "DescKW", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">DESCKU</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.DescKU, new { id = "DescKU", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                
                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Pulau</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Island, new { id = "Island", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Koordinator</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Coordinator, new { id = "Coordinator", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Install Date</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.InstallDate, new { id = "InstallDate", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">Kamera</label>
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(x => x.Camera, new { id = "Camera", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END title 1 -->        
                        <!-- START title 2 -->
                        <div class="row form_text">
                            <div class="panel panel-default panel_form_child">
                                <div class="panel-heading">
                                    <label class="control-label sv-header"><strong>Timestamp Information</strong></label>
                                </div>
                                <br />
                                <div class="panel-body">
                                    <div class="form-horizontal">
                                
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="col-sm-4 control-label">Created By</label>
                                                    <div class="col-sm-8">
                                                        @Html.TextBoxFor(x => x.CreatedByName, new { @class = "form-control", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">                                        
                                                <div class="form-group">
                                                    <label class="col-sm-4 control-label">Created On</label>
                                                    <div class="col-sm-8">
                                                        @Html.TextBoxFor(x => x.CreatedOn, new { @class = "form-control", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6">                                        
                                                <div class="form-group">
                                                    <label class="col-sm-4 control-label">Modified By</label>
                                                    <div class="col-sm-8">
                                                        @Html.TextBoxFor(x => x.ModifiedByName, new { @class = "form-control", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">                                                                              
                                                <div class="form-group">
                                                    <label class="col-sm-4 control-label">Modified On</label>
                                                    <div class="col-sm-8">
                                                        @Html.TextBoxFor(x => x.ModifiedOn, new { @class = "form-control", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END title 2 -->
                    </div>
                }
            </div>
        </div>
    </div>

    <div id="response-modal"></div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var entityName = '@ViewContext.RouteData.Values["Controller"].ToString()';

        function validateForm(action, formName) {
            if ($("#Location").val() == "") {
                alert("@Resources.WSID.MandatoryLocation");
                return false;
            }
            if ($("#Name").val() == "") {
                alert("@Resources.WSID.MandatoryName");
                return false;
            }
            if ($("#Address").val() == "") {
                alert("@Resources.WSID.MandatoryAddress");
                return false;
            }
            formSubmit(action, formName);
        }

        $("#btn_save").click(function () {
            validateForm("save", $("#form_wsid"));
        });
        
        $("#btn_savenclose").click(function () {
            validateForm("saveNClose", $("#form_wsid"));
        });

        $("#btn_savenopen").click(function () {
            validateForm("saveNOpen", $("#form_wsid"));
        });

        $("#InstallDate").datepicker({
            format: "mm/dd/yyyy",
            autoclose: true
        });
        
    });
</script>
