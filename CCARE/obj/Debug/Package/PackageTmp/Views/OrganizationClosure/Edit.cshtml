                                                    @Html.TextBoxFor(x => x.StartDate, new { Value = @Model.StartDate.Value.ToString("dd/MM/yyyy"), @class = "form-control" })
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar fa-lg"></i>
