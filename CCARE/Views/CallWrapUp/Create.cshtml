<script type="text/javascript">

    $(window).unload(function () {
        localStorage.callstart = '';
        localStorage.callend = '';
    });

    $(document).ready(function () {
        $('#CreatedBy').val('@Session["CurrentUserID"].ToString()');
        $('#CreatedByName').val('@Session["Fullname"].ToString()');

        if ($("#c_radio").is(":checked")) {
            $('.cust').show();
            $('.ncust').hide();
            $('#flagc').val('cust')

        } else if ($("#nc_radio").is(":checked")) {
            $('.cust').hide();
            $('.ncust').show();
            $('#flagc').val('ncust')



        }

        $(".radio input[type='radio']").on('click', function () {
            if ($("#c_radio").is(":checked")) {
                $('.cust').show();
                $('.ncust').hide();
                $('#flagc').val('cust')
            } else if ($("#nc_radio").is(":checked")) {
                $('.cust').hide();
                $('.ncust').show();
                $('#flagc').val('ncust')

            }
        });




        $("#btn_save").click(function () {
            if ($('#CallStartTime').val() == "") {
                alert("@Resources.CallWrapUp.CallStartTimeMandatory");
            }
            else if ($('#c_radio').checked == true) {
                if ($('#CustomerID').val() == "") {
                    alert("@Resources.CallWrapUp.CustomerIDMandatory");
                }
            }
            else if ($('#nc_radio').checked == true) {
                if ($('#NonCustomerID').val() == "") {
                    alert("@Resources.CallWrapUp.NonCustomerIDMandatory");
                }
            }
            else {
                formSubmit("save", $("#form_CallWrapUp"));
            }
        });

        $("#btn_savenclose").click(function () {
            formSubmit("saveNClose", $("#form_CallWrapUp"));
        });



        $('#Customer-popup').on('click', function (e) {
            urlModalPopup = '@Url.Action("_popupContent", "Popup", new { type = "customer", _entity = "" })';
            colModelsName = [
            { label: 'ID', name: 'Id', index: 'Id', key: true, width: 75, hidden: true },
            { label: 'Full Name', name: 'Name', width: 100 },
            { label: 'CIS Number', name: 'CISNumber', width: 100 },
            { label: 'ID Number', name: 'IDNumber', width: 150 },
            { label: 'Business No.', name: 'BusinessNo', width: 150 },
            { label: 'E-mail', name: 'EMail', width: 150 }
            ];
            var id = $(this).parent().find('input:last').attr('id');
            $('#' + id).trigger("blur");
            e.preventDefault();
        });


        var customerTypeahead = new PopupClass();
        customerTypeahead.setId("CustomerName");
        customerTypeahead.setUrl('@Url.Action("Customer", "Popup")');
                customerTypeahead.setHiddenId("CustomerID");
                customerTypeahead.init();



        $('#NonCustomer-popup').on('click', function (e) {
            urlModalPopup = '@Url.Action("_popupContent", "Popup", new { type = "noncustomer", _entity = "" })';
              colModelsName = [
                  { label: 'ID', name: 'Id', index: 'Id', key: true, width: 75, hidden: true },
                  { label: 'Full Name', name: 'Name', width: 200 },
                  { label: 'Phone Number', name: 'Name', width: 200 }
              ];
              var id = $(this).parent().find('input:last').attr('id');
              $('#' + id).trigger("blur");
              e.preventDefault();
          });


          var noncustomerTypeahead = new PopupClass();
          noncustomerTypeahead.setId("NonCustomerName");
          noncustomerTypeahead.setUrl('@Url.Action("NonCustomer", "Popup")');
               noncustomerTypeahead.setHiddenId("NonCustomerID");
               noncustomerTypeahead.init();

        //Set CTI value on page load
        getCtiValues();
       
    });

    //Connect to cti
    myobject.ConnectIC();

    //Set CTI value on page load
    getCtiValues();

