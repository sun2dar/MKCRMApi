@model CCARE.Models.KlikBCABisnisInfo

<div class="panel-body" id="messagebox"></div>

@if (ViewBag.searchResultsCount > 0)
{
    if (ViewBag.StatusChange != "")
    {
        <script type="text/javascript">ChangeStatusMessageBox("#messagebox", "@ViewBag.StatusChange", "@ViewBag.RequestId", "@ViewBag.TicketNumber");</script>
    }
    <div class="row form_text">
        <div class="panel panel-default panel_form_child">

            <div class="panel-heading" id="contentHeaderDiv">
                <label class="control-label sv-header">
                    <strong>KlikBCA Bisnis</strong>
                </label>
                <a class="pull-right" data-toggle="collapse" href="#collapseContentDiv" aria-expanded="true" aria-controls="collapseContentDiv">
                    <i class="fa fa-angle-double-up fa-lg"></i>
                </a>
            </div>

            @if (ViewBag.Mode != "AccountNo")
            {
                <div class="col-sm-offset-10 btn-change-status">
                    <input class="btn btn-primary btn-crm-layout" type="button" value="Change Status" id="changeStatusBtn" />
                </div>
            }

            <div class="panel panel-default panel_form_child" id="statusDiv">
                <div class="panel-heading" id="statusHeaderDiv">
                    <label class="control-label sv-header">
                        <strong>Change Status</strong>
                    </label>
                    <a class="pull-right" data-toggle="collapse" href="#collapseStatusDiv" aria-expanded="true" aria-controls="collapseStatusDiv">
                        <i class="fa fa-angle-double-up fa-lg"></i>
                    </a>          
                </div>
                <div id="collapseStatusDiv" class="panel-collapse collapse in" aria-labelledby="headingOne">
                    <br />
                    <div class="row form-horizontal">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Status</label>
                                <div class="col-sm-2">
                                    <select id="statusDdl" name="statusDdl" class="form-control">
                                        <option value="">-- Select Status --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-horizontal">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Change Status To</label>
                                <div class="col-sm-2">
                                    <select id="nextStatusDdl" name="nextStatusDdl" class="form-control" disabled>
                                        <option value="">-- Select Status --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="col-sm-offset-2">
                                    <input class="btn btn-primary btn-crm-layout" type="button" value="Kirim" id="sendBtn" data-loading-text="Processing..." />
                                    <input class="btn btn-default btn-crm-layout" type="button" value="Batal" id="cancelBtn" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="collapseContentDiv" class="panel-collapse collapse in" aria-labelledby="headingOne">
                <div class="panel-body">
                    <div class="form-horizontal">

                        @if (ViewBag.Mode == "AccountNo")
                        {
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Corp ID</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.CorpID</label>
                                        @Html.HiddenFor(x => x.CorpID)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Nama Corporate</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.CorpName</label>
                                        @Html.HiddenFor(x => x.CorpName)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Alamat E-Mail Corp 1</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.Email1</label>
                                        @Html.HiddenFor(x => x.Email1)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Alamat E-Mail Corp 2</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.Email2</label>
                                        @Html.HiddenFor(x => x.Email2)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Account No</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.AccountNo</label>
                                        @Html.HiddenFor(x => x.AccountNo)
                                        <br />
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Nama User</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.UserName</label>
                                        @Html.HiddenFor(x => x.UserName)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Tgl Register</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @(Model.RegisterDate == null ? String.Empty : String.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.RegisterDate))</label>
                                        @Html.HiddenFor(x => x.RegisterDate)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Tgl Terakhir Login</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @(Model.LastLoginDate == null ? String.Empty : String.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.LastLoginDate))</label>
                                        @Html.HiddenFor(x => x.LastLoginDate)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Alamat E-Mail Corp 1</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.Email1</label>
                                        @Html.HiddenFor(x => x.Email1)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Alamat E-Mail Corp 2</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.Email2</label>
                                        @Html.HiddenFor(x => x.Email2)
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Status Terakhir</label>
                                        <label class="col-sm-8 control-label text-left-i"> : @Model.LastStatus</label>
                                        @Html.HiddenFor(x => x.LastStatus)
                                        <br />
                                    </div>
